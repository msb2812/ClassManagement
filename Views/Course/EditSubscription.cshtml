@model ClassManagement.ViewModels.SubscriptionViewModel

@{
    ViewBag.Title = "EditSubscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Subscription</h2>


@using (Html.BeginForm("EditSubscription", "Course")) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.CourseRegistration.StatusId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CourseRegistration.StatusId, new SelectList(Model.Status, "Id", "Title"), "Select Role", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CourseRegistration.StatusId, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(m => m.CourseRegistration.Id)
    @Html.HiddenFor(m => m.CourseRegistration.User.Id)
    @Html.HiddenFor(m => m.CourseRegistration.Course.Id)
    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
